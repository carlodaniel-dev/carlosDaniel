---
const PROJECTS = [
    {
        title: "Project One",
        description: "A brief description of Project One.",
        link: "#",
        github: "#",
        image: "#",
        tags: ["HTML", "CSS", "JavaScript"],
    },
];
---

{
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
        <article>
            <h3>{title}</h3>
            <p>{description}</p>
            <ul>
                {tags.map((tag) => (
                    <li>{tag}</li>
                ))}
            </ul>
            <img src={image} alt={`Captura de pantalla del proyecto ${image}`}/>
        </article>
    ))
}
