---
import Html from "./icons/Html.astro";
import Css from "./icons/Css.astro";
import Js from "./icons/Js.astro";

const TAGS = {
    HTML: {
        name: "HTML",
        color: "bg-[#e34f26]/10 text-[#ff6d45] border border-[#e34f26]/20",
        icon: Html,
    },
    CSS: {
        name: "CSS",
        color: "bg-[#1572b6]/10 text-[#30a9ff] border border-[#1572b6]/20",
        icon: Css,
    },
    JS: {
        name: "JavaScript",
        color: "bg-[#f7df1e]/10 text-[#f7df1e] border border-[#f7df1e]/20",
        icon: Js,
    },
};

const PROJECTS = [
    {
        title: "Centro Perfecta Alegría - Desarrollo Psicoemocional Integral",
        description:
            "Landing page profesional diseñada para optimizar la presencia digital de un centro de salud mental. Enfocada en la experiencia de usuario (UX), con un diseño limpio, totalmente responsivo y una arquitectura de información clara para facilitar el contacto de los pacientes.",
        link: "https://carlodaniel-dev.github.io/centro-perfectaAlegria/",
        github: "https://github.com/carlodaniel-dev/centro-perfectaAlegria",
        image: "/projects/perfectAlegria.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JS],
    },
];
---

{
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex flex-row mb-4 gap-x-2">
                {tags.map((tag) => (
                    <li>
                        <span
                            class={`flex items-center gap-x-2 rounded-full text-xs font-semibold ${tag.color} py-1 px-3 shadow-sm transition-all hover:scale-105`}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/20"
                src={image}
                alt={`Captura de pantalla del proyecto ${image}`}
            />
        </article>
    ))
}
